<div class="row">
  <div class="col-md-4 col-md-offset-<%= define_offset(@winner) %>">
    <% if @winner == "draw" %>
        <h1> Ничья</h1>
    <% elsif @winner == "man" %>
        <h1>Ура! Вы победили! :)</h1>
    <% else %>
        <h1>Увы. Вы проиграли :(</h1>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3">
    <div class="row">
      <div class="col-md-3">
        <h3> Выбор компьютера:</h3>
      </div>
      <div class="col-md-1">
      </div>

      <div class="col-md-3">
        <h3>Ваш выбор:</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= image_tag show_choice(@machin_choice) %>
      </div>
      <div class="col-md-1">
      </div>
      <div class="col-md-3">
        <%= image_tag show_choice(@man_choice) %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= link_to "Заново!", root_path, class: "btn btn-default btn-lg", style: "float: right" %>
  </div>
</div>